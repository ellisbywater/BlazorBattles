@inject BlazorBattles.Web.Client.Services.IBananaService BananaService
@implements IDisposable

<div class="top-menu">
    <img src="icons/I_C_Banana.png" alt="Banana Count" />
    <span class="popover-header">@BananaService.Bananas</span> 
    <AddBananas BananasAdded="AddBananas" />
</div>

@code {
 
    protected override void OnInitialized()
    {
        BananaService.OnChange += StateHasChanged;
    }

    public void Dispose()
    {
        BananaService.OnChange -= StateHasChanged;
    }
}
